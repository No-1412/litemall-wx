/* 清除btn默认样式 */

.cle-btn-def {
  position: relative;
  display: block;
  margin: unset;
  padding: unset;
  box-sizing: border-box;
  font-size: unset;
  text-align: center;
  text-decoration: none;
  line-height: unset;
  border-radius: unset;
  -webkit-tap-highlight-color: transparent;
  overflow: hidden;
  color: #000;
  background-color: #fff;
}

.self-shadow {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  transition: all 0.2s ease-in-out;
  visibility: hidden;
  opacity: 0;
  z-index: 100;
  background: rgba(0, 0, 0, 0.5);
}

.self-shadow-show {
  visibility: visible;
  opacity: 1;
}

/* 垂直居中 */

.f-c {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 垂直居中 */

.f-c-b {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 垂直居左 */

.f-l {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

/* 垂直居右 */

.f-r {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

/* 垂直居中(从上到下布局) */

.d-c {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 垂直居中 */

.p-c {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%); /* IE 9 */
  -webkit-transform: translate(-50%, -50%); /* Safari and Chrome */
  -o-transform: translate(-50%, -50%); /* Opera */
  -moz-transform: translate(-50%, -50%); /* Firefox */
}

/* 垂直居左 */

.p-l {
  position: absolute;
  top: 50%;
  left: 0;
  transform: translate(0, -50%);
  -ms-transform: translate(0, -50%); /* IE 9 */
  -webkit-transform: translate(0, -50%); /* Safari and Chrome */
  -o-transform: translate(0, -50%); /* Opera */
  -moz-transform: translate(0, -50%); /* Firefox */
}

/* 垂直居右 */

.p-r {
  position: absolute;
  top: 50%;
  right: 0;
  transform: translate(0, -50%);
  -ms-transform: translate(0, -50%); /* IE 9 */
  -webkit-transform: translate(0, -50%); /* Safari and Chrome */
  -o-transform: translate(0, -50%); /* Opera */
  -moz-transform: translate(0, -50%); /* Firefox */
}

/*上划线*/

.border-top::before {
  content: " ";
  display: inline-block;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  border-top: 4rpx solid red;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

/*下划线*/

.border-bottom::after {
  content: " ";
  display: inline-block;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  border-bottom: 4rpx solid red;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

/* 一行省略 */

.clamp {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  white-space: normal;
  word-wrap: break-word;
  word-break: break-all;
}

/* 两行省略 */

.clamp2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  white-space: normal;
  word-wrap: break-word;
  word-break: break-all;
}

/* 清除浮动 */

.ks-clear:after, .clear:after, .ks-clear:before, .clear:before {
  content: '\20';
  display: block;
  height: 0;
  clear: both;
}

/* 相对定位 */

.fix {
  position: fixed;
  width: 100%;
}

/* 绝对定位 */

.abl {
  position: absolute;
  width: 100%;
}

/* 满屏布局 */

.full-pf {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

/* 一页满屏布局 */

.full-p {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

